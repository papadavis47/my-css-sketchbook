const pages = [{ pageName: "positioned layout", href: "/positioned"}, { pageName: "flow layout", href: "/flow"}, { pageName: "grid layout", href: "/grid"}, { pageName: "flex layout", href: "/flex"}, { pageName: "animations", href: "/animations"} ]
import ContentLink from './ContentLink.astro'
---


<div class="container">
    <div class="wrapper">
    <h2>table of contents</h2>
        <ul>
            {pages.map(({pageName, href}) => {
                return <ContentLink pageName={pageName} href={href} />
            })}
        </ul>
    </div>
</div>


<style>
    .container {
        border: solid 4px var(--borderPurple);
        border-radius: 6px;
        padding: 12px 16px;
    }

    h2 {
        text-transform: capitalize;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }
</style>
